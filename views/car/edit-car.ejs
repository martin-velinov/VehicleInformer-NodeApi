<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/car.js"></script>
  </head>
  <body>
    <%- include("../partials/nav.ejs"); %>
    <a href="/car">Cars</a>
    <br>
    <form onsubmit="event.preventDefault()" id="form">
      <label for="">Brand:</label>
      <input type="text" name="brand" value="<%= car.brand %>">
      <label for="">Model:</label>
      <input type="text" name="model" value="<%= car.model %>">
      <label for="">Registered:</label> 
      <input type="text" name="registered" value="<%= car.registered %>">
      <label for="">Year:</label> 
      <input type="number" name="year" value="<%= car.year %>">
      <label for=""> Horse Power:</label> 
      <input type="number" name="horsePower" value="<%= car.horsePower %>">
      <label for=""> Fuel:</label> 
      <input type="text" name="fuel" value="<%= car.fuel %>">
      <button onclick="updateCar(`<%= car._id %>`);">Update</button>
    </form>
    <%- include("../partials/footer.ejs"); %>
</body>
</html>
